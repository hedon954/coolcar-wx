@import "/colorui/icon.wxss";
@import "/colorui/main.wxss";



swiper {
    width: 750rpx;
    height: 306rpx;
}

.swiper-image {
    width: 100%;
    height: 100%;
}

.avatar-container {
    display: flex;
    align-items: center;
    justify-content: flex-end;
}

.nav-container {
    display: flex;
}

.nav-container swiper {
    width: 200rpx;
}

.trip {
    border-radius: 25rpx;
}

.trip-detail {
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.detail-row {
    display: flex;
}

.mytrips-heading{
    position: absolute;
    left: 50rpx;
    font-style: italic;
    font-weight: bold;
}

.charge {
    font-style: italic;
}

.cur{
    width: 8rpx;
    border-radius: 10rpx 0 0 10rpx;
    position: absolute;
    background-color: currentColor;
    top: 0;
    right: 0rpx;
    bottom: 0;
    margin: auto;
}

.nav .cu-item {
    margin: unset;
    padding: unset;
    text-align: center;
}